{
    "name": "master-addon-manager",
    "version": "1.0.0",
    "description": "Master Addons manager",
    "author": "Sitoz <pentsec.2@protonmail.com>",
    "main": "main.js",
    "scripts": {
        "start": "electron .",
        "watch:tailwind": "tailwindcss -i ./css/styles.css -o ./styles.css --watch",
        "build:css": "tailwindcss -i ./css/styles.css -o ./styles.css --watch",
        "package": "electron-builder build"
    },
    "dependencies": {
        "@tailwindcss/typography": "^0.5.13",
        "axios": "^1.7.2",
        "build": "^0.1.4",
        "daisyui": "^4.12.2",
        "electron-app": "^1.0.0",
        "package": "^1.0.1",
        "unzipper": "^0.12.1"
    },
    "devDependencies": {
        "autoprefixer": "^10.4.19",
        "electron": "^31.0.1",
        "electron-builder": "^24.13.3",
        "postcss": "^8.4.38",
        "tailwindcss": "^3.4.4"
    },
    "build": {
        "appId": "https://pentsec.github.io/",
        "productName": "Master Addons Manager",
        "files": "!build-assets${/*}",
        "directories": {
            "output": "dist"
        },
        "mac": {
            "icon": "images/icon.icns"
        },
        "win": {
            "target": "nsis",
            "icon": "images/ico.ico"
        },
        "linux": {
            "icon": "images/logo.png"
        }
    }
}
